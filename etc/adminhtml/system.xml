<?xml version='1.0'?>
<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='urn:magento:module:Df_Config:etc/system_file.xsd'
>
    <system>
        <section id='df_amazon'>
			<group
				id='login'
				translate='label'
				type='text'
				sortOrder='2'
				showInDefault='1'
				showInWebsite='1'
				showInStore='1'
			>
				<label>Login</label>
				<field
					id='enable'
					translate='label'
					type='Df\Framework\Form\Element\Checkbox'
					sortOrder='1'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Enable?</label>
					<backend_model>Df\Config\Backend\Checkbox</backend_model>
					<comment><![CDATA[Enable the «<a href='https://mage2.pro/c/extensions/amazon-login' target='_blank'>Login with Amazon</a>» extension?]]></comment>
				</field>
				<group
					id='credentials'
					translate='label'
					type='text'
					sortOrder='1'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<depends><field id='enable'>1</field></depends>
					<label>Credentials</label>
					<field
						id='id'
						translate='label'
						type='text'
						sortOrder='1'
						showInDefault='1'
						showInWebsite='1'
						showInStore='1'
					>
						<label>Client ID</label>
						<comment><![CDATA[<a href='https://mage2.pro/t/1705' target='_blank'>Where to find it?</a>]]></comment>
						<validate>required-entry validate-length maximum-length-61 minimum-length-61</validate>
					</field>
					<field
						id='secret'
						translate='label'
						type='obscure'
						sortOrder='2'
						showInDefault='1'
						showInWebsite='1'
						showInStore='1'
					>
						<label>Client Secret</label>
						<comment><![CDATA[<a href='https://mage2.pro/t/1706' target='_blank'>Where to find it?</a>]]></comment>
						<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
						<validate>required-entry validate-length maximum-length-64 minimum-length-64</validate>
					</field>
				</group>
				<group
					id='locations'
					translate='label'
					type='text'
					sortOrder='2'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<depends><field id='enable'>1</field></depends>
					<label>Button Locations</label>
					<field
						id='header'
						translate='label'
						type='Df\Framework\Form\Element\Checkbox'
						sortOrder='1'
						showInDefault='1'
						showInWebsite='1'
						showInStore='1'
					>
						<label>Show in Header?</label>
						<backend_model>Df\Config\Backend\Checkbox</backend_model>
						<comment><![CDATA[Shows the «<b>Login with Amazon</b>» button in the header of the frontend pages, near to the standard «<b>Sign In</b>» and «<b>Create an Account</b>» links.]]></comment>
					</field>
					<field
						id='loginPage'
						translate='label'
						type='Df\Framework\Form\Element\Checkbox'
						sortOrder='2'
						showInDefault='1'
						showInWebsite='1'
						showInStore='1'
					>
						<label>Show on Login Page?</label>
						<backend_model>Df\Config\Backend\Checkbox</backend_model>
						<comment><![CDATA[Shows the «<b>Login with Amazon</b>» button on the «<b>Customer Login</b>» page, above the standard «<b>Registered Customers</b>» and «<b>New Customers</b>» blocks.]]></comment>
					</field>
					<field
						id='registratonPage'
						translate='label'
						type='Df\Framework\Form\Element\Checkbox'
						sortOrder='3'
						showInDefault='1'
						showInWebsite='1'
						showInStore='1'
					>
						<label>Show on Registration Page?</label>
						<backend_model>Df\Config\Backend\Checkbox</backend_model>
						<comment><![CDATA[Shows the «<b>Login with Amazon</b>» button on the «<b>Create New Customer Account</b>» page, above the standard registration form.]]></comment>
					</field>
				</group>
			</group>
        </section>
    </system>
</config>