<?xml version='1.0'?>
<page
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:noNamespaceSchemaLocation='urn:magento:framework:View/Layout/etc/page_configuration.xsd'
>
	<body>
<!--
2016-11-23
The «df.customer.login.before» container is added by the «Df_Sso» module:
https://github.com/mage2pro/core/blob/1.9.18/Sso/view/frontend/layout/customer_account_login.xml?ts=4#L17-L22
-->
		<referenceContainer name='df.customer.login.before'>
			<block
				class='Dfe\AmazonLogin\Button'
				name='Dfe_AmazonLogin_Button-customer.account.login'
				ifconfig='df_amazon/login/locations/loginPage'
				before='-'
			>
				<arguments>
					<argument name='jsOptions' xsi:type='array'>
						<item name='size' xsi:type='string'>medium</item>
						<item name='type' xsi:type='string'>LwA</item>
					</argument>
				</arguments>
			</block>
		</referenceContainer>
	</body>
</page>