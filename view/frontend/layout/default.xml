<?xml version='1.0'?>
<page 
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:noNamespaceSchemaLocation='urn:magento:framework:View/Layout/etc/page_configuration.xsd'
>
	<body>
		<referenceBlock name='header.links'>
			<block before='-' class='Dfe\AmazonLogin\Button'>
				<arguments>
<!--
2016-11-24
protected function s() {return dfc($this, function() {return new S($this['dfConfigPrefix']);});}
https://github.com/mage2pro/core/blob/1.9.21/Sso/Button.php?ts=4#L63
-->
					<argument name='dfConfigPrefix' xsi:type='string'
					>df_amazon/login/button/header</argument>
					<argument name='dfJsOptions' xsi:type='array'>
						<item name='css' xsi:type='array'>
							<item name='.page-header .header.panel' xsi:type='string'
							>{"padding-bottom": 0}</item>
						</item>
						<item name='size' xsi:type='string'>small</item>
						<item name='style' xsi:type='string'>{"margin-top": "-5px"}</item>
						<item name='type' xsi:type='string'>Login</item>
					</argument>
				</arguments>				
			</block>
		</referenceBlock>
	</body>
</page>